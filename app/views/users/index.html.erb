<div class="d-flex align-items-center">
  <h1>ユーザー一覧</h1>
</div>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if current_user.admin? && !current_user?(user) %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.created_at.to_s(:datetime_jp) %></td>
          <td><%= user.updated_at.to_s(:datetime_jp) %></td>
          <td><%= link_to '詳細', user, class: 'btn btn-outline-dark' %></td>
          <td><%= link_to '削除', user, class: 'btn btn-outline-dark', method: :delete %></td>
        </tr>
      <% else %>
       <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.created_at.to_s(:datetime_jp) %></td>
          <td><%= user.updated_at.to_s(:datetime_jp) %></td>
          <td><%= link_to '詳細', user, class: 'btn btn-outline-dark' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

